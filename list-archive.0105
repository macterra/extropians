my $trial = 0,$matches = 0;
while ($trial < 1000) {
     my $picked_door = ceil(rand(3));
     my $prize_door = ceil(rand(3));
     $picked_door =
           do_strategy_d($picked_door,$prize_door);
     $matches++ if ($picked_door == $prize_door);
     $trial++;
}
print $matches . " out of " . $trial . " prizes won\n";

